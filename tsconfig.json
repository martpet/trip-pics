{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": [ "./*" ],
      "constructs": ["../../node_modules/constructs"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    ".eslintrc.js",
    ".prettierrc.js",
    "jest.config.ts"
  ]
}